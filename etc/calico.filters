# neutron-rootwrap command filters for nodes on which neutron is
# expected to control network
#
# This file should be owned by (and only-writeable by) the root user

# format seems to be
# cmd-name: filter-name, raw-command, user, args

[Filters]

neutron-enable-proxy-arp: CommandFilter, neutron-enable-proxy-arp, root
neutron-disable-proxy-arp: CommandFilter, neutron-disable-proxy-arp, root
neutron-enable-local-routing: CommandFilter, neutron-enable-local-routing, root
neutron-disable-local-routing: CommandFilter, neutron-disable-local-routing, root
arp: CommandFilter, arp, root
kill: CommandFilter, kill, root

