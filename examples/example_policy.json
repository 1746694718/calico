{
  "applyTo": {
    "tier": "backend"
  }, 
  "kind": "NetworkPolicy", 
  "allowIncoming": [
    {
      "from": [
        {
          "pods": {
            "tier": "middle"
          }
        }, 
        {
          "pods": {
            "role": "test"
          }
        }
      ], 
      "toPorts": [
        {
          "protocol": "TCP", 
          "port": 80
        }
      ]
    }
  ], 
  "apiVersion": "net.alpha.kubernetes.io/v1alpha1", 
  "metadata": {
    "namespace": "default", 
    "name": "test-policy"
  }
}
